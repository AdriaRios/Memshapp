<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.adriarios.memshapp.activities.ShowMemoriesAC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout">
    <ToggleButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/showMyMemories"
        android:textOff="SOLO LOS MÍOS"
        android:textOn="SOLO LOS MÍOS"
        android:layout_weight="0.5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:textOff="TODOS"
        android:textOn="TODOS"
        android:id="@+id/showAllMemories"
        android:layout_above="@+id/gridView"
        android:layout_alignRight="@+id/gridView"
        android:layout_alignEnd="@+id/gridView" />
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/gridView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/LinearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
