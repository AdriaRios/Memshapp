<org.adriarios.memshapp.customComponents.ScrollViewCustom
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewDetailsOL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="org.adriarios.memshapp.activities.online.DetailsOnLineMemoryAC">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageDetailsOL"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/spaceBetweenImageAndVideoOL"
            android:layout_below="@+id/imageDetailsOL"
            android:layout_height="12dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/videoLayoutOL"
            android:layout_below="@+id/spaceBetweenImageAndVideoOL"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/videoThumbnailOL"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="46dp"
                android:id="@+id/playVideoOL"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/play_video"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/audioLayoutOL"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/videoLayoutOL"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/playAudioButtonDetailsOL"
                android:layout_width="285dp"
                android:layout_height="71dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/play_audio_on" />

            <TextView
                android:id="@+id/playAudioTextDetailsOL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/playAudioButtonDetailsOL"
                android:layout_alignTop="@+id/playAudioButtonDetailsOL"
                android:layout_alignBottom="@+id/playAudioButtonDetailsOL"
                android:textSize="18sp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="REPRODUCIR AUDIO"
                android:textColor="#fff" />



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Título"
            android:textStyle="bold"
            android:id="@+id/titleDetailsOL"
            android:layout_below="@+id/audioLayoutOL"
            android:textColor="#000000"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:text="23/04/2015"
            android:textColor="#b1b2b3"
            android:id="@+id/dateDetailsOL"
            android:layout_below="@+id/titleDetailsOL"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descripción"
            android:paddingBottom="12dp"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:id="@+id/descDetailsOL"
            android:textColor="#b1b2b3"
            android:layout_below="@+id/dateDetailsOL"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mapOL"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_below="@+id/descDetailsOL"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/addressDetailsOL"
            android:layout_below="@+id/descDetailsOL"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="30dp"
            android:layout_below="@+id/descDetailsOL"
            android:background="#ffffff"
            android:alpha="0.5"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</org.adriarios.memshapp.customComponents.ScrollViewCustom>

