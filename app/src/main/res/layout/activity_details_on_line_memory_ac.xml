<org.adriarios.memshapp.customComponents.ScrollViewCustom
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewDetailsOL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="org.adriarios.memshapp.activities.online.DetailsOnLineMemoryAC">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageDetailsOL"
            android:scaleType= "centerCrop"
            android:adjustViewBounds= "true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/spaceBetweenImageAndVideoOL"
            android:layout_below="@+id/imageDetailsOL"
            android:layout_height="12dp" />

        <org.adriarios.memshapp.customComponents.VideoViewCustom
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/videoDetailsOL"
            android:scaleType= "centerCrop"
            android:adjustViewBounds= "true"
            android:layout_below="@+id/spaceBetweenImageAndVideoOL"
            android:paddingBottom="12dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPRODUCIR AUDIO"
            android:id="@+id/playAudioButtonDetailsOL"
            android:paddingBottom="12dp"
            android:layout_below="@+id/videoDetailsOL"
            android:layout_alignLeft="@+id/mapOL"
            android:layout_alignStart="@+id/map" />


        OL<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Título"
            android:textStyle="bold"
            android:id="@+id/titleDetailsOL"
            android:layout_below="@+id/playAudioButtonDetailsOL"
            android:textColor="#000000"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:text="23/04/2015"
            android:textColor="#b1b2b3"
            android:id="@+id/dateDetailsOL"
            android:layout_below="@+id/titleDetailsOL"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descripción"
            android:paddingBottom="12dp"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:id="@+id/descDetailsOL"
            android:textColor="#b1b2b3"
            android:layout_below="@+id/dateDetailsOL"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mapOL"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_below="@+id/descDetailsOL"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/addressDetailsOL"
            android:layout_below="@+id/descDetailsOL"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@+id/descDetailsOL"
            android:background="#ffffff"
            android:alpha="0.5"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</org.adriarios.memshapp.customComponents.ScrollViewCustom>

