<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:src="@drawable/cameraicon"
        android:id="@+id/imageView" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/videoView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/stopAudioButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HACER UN VÍDEO"
        android:id="@+id/videoButton"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/startAudioButton"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/videoButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stopAudioButton"
        android:layout_alignTop="@+id/startAudioButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/playAudioButton"
        android:layout_alignTop="@+id/stopAudioButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/saveButton"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título"
        android:id="@+id/titleET"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionET"
        android:hint="Introduce la descripción"
        android:gravity="top|left"
        android:layout_below="@+id/titleET"
        android:layout_alignStart="@+id/titleET"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/videoView" />

</RelativeLayout>
