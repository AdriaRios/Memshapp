<org.adriarios.memshapp.customComponents.ScrollViewCustom
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.adriarios.memshapp.activities.DetailsMemoryAC">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageDetails"
        android:scaleType= "centerCrop"
        android:adjustViewBounds= "true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/titleDetails"
        android:layout_below="@+id/imageDetails"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/descDetails"
        android:layout_below="@+id/titleDetails"
        android:layout_alignParentStart="true" />



    <org.adriarios.memshapp.customComponents.VideoViewCustom
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/videoDetails"
        android:scaleType= "centerCrop"
        android:adjustViewBounds= "true"
        android:layout_below="@+id/descDetails"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playAudioButtonDetails"
        android:layout_below="@+id/videoDetails"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/addressDetails"

        android:layout_below="@+id/playAudioButtonDetails"
        android:layout_centerHorizontal="true" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_below="@+id/addressDetails"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
</org.adriarios.memshapp.customComponents.ScrollViewCustom>
