<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.adriarios.memshapp" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.AddMemoryAC"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <provider
            android:name=".contentprovider.MemoriesProvider"
            android:authorities="org.adriarios.memshapp.sqlite.provider"
            android:exported="true" >
        </provider>

        <activity
            android:name=".activities.ShowMemoriesAC"
            android:configChanges="orientation"
            android:label="@string/title_activity_memories_list"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.RecordAudioAC"
            android:configChanges="orientation"
            android:label="@string/title_activity_record_audio_ac"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.DetailsMemoryAC"
            android:configChanges="orientation"
            android:label="@string/title_activity_details_memory_ac"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC_v30WBmxsAafAo9z1QzzBCsjFcRejiSw" />

        <activity
            android:name=".activities.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
    </application>

</manifest>
